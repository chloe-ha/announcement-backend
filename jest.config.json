{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "src/tests/*"
  ],
  "collectCoverage": true,
  "verbose": true,
  "testTimeout": 30000,
  "roots": [
    "<rootDir>/src"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}